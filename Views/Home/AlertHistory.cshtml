@{
    ViewBag.Title = "AlertHistory";
}
<link rel="stylesheet" href="~/Content/datepicker3.css">
<link rel="stylesheet" href="~/Content/bootstrap.min.css">

<script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>

<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script src="~/Scripts/bootstrap-datepicker.zh-CN.js"></script>

<div>
    <div class="container_12 searchArea" id="searchBox">
        <div class="searchTitle">
            <span>请输入搜索日期:</span>
        </div>
        <form class="formWithDate">
            <div class="input-group date dateInput">
                <input type="text" class="form-control" name="start"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
            <div class="input-group date dateInput">
                <input type="text" class="form-control" name="end"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
            <input type="submit" class="submit" value="搜索">
        </form>
        </div>
    <div class="clearfix">&nbsp;</div>
    <div class="container_12">
        <table width="100%" border="0" cellpadding="0" cellspacing="0">

            <tr>

                <th width="18%" scope="col">报警时间</th>
                <th width="16%" scope="col">企业名</th>
                <th width="29%" scope="col">联系电话</th>
                <th width="13%" scope="col">事故状态</th>
                <th width="11%" scope="col">具体细节</th>
            </tr>

            @foreach (var alert in Model)
            {
                <tr>
                    <td scope="col">@alert.AlertTime</td>
                    <td scope="col">@alert.CompanyName</td>
                    <td scope="col">@alert.Phone</td>
                    <td scope="col">@alert.StatusDescription</td>
                    <td scope="col"><a href="@Url.Action("Detail", "Home", new { alertId = @alert.ID})">查看</a></td>
                </tr>
            }
        </table>
    </div>
</div>
<script>
    $(function () {
        var $j = jQuery.noConflict();
        $j('#searchBox .input-group.date').datepicker({});
    });
</script>

